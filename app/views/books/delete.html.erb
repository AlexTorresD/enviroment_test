<%= link_to 'Back', books_path %>

<div class="book delete">
  <h2> Delete Book </h2>
  
  <%= form_with model: @book , method: :delete do |form| %>
  
    <p> Are you sure you want to delete this book?</p>
    
    <div class="actions">
      <%= form.submit("Delete Book") %>
    </div>
    
  <% end %>
</div>

